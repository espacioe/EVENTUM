@{
    ViewBag.Title = "Ingreso";
    Layout = "~/Views/Shared/_LayoutIngreso.cshtml";
}

<!--begin::Wrapper-->
<div class="w-lg-500px p-10 p-lg-15 mx-auto">
    <!--begin::Form-->
    <form class="form w-100" novalidate="novalidate" id="kt_sign_in_form" action="#">
        <!--begin::Heading-->
        <div class="text-center mb-10">
            <!--begin::Title-->
            <h1 class="text-dark mb-3">Verificar Usuario</h1>
            <!--end::Title-->
            <!--begin::Link-->
            @*<div class="text-gray-400 fw-bold fs-4">
                ¿No tiene cuenta?
                <div class="link-primary fw-bolder">@Html.ActionLink("Registrarse", "Registro", "Cuenta")</div>
            </div>*@
            <!--end::Link-->
        </div>
        <!--begin::Heading-->
        <!--begin::Input group-->
        <div class="fv-row mb-10">
            <!--begin::Label-->
            <label class="form-label fs-6 fw-bolder text-dark">Tipo de Identificación</label>
            <!--end::Label-->
            <!--begin::Input-->
            <select class="form-select form-select-solid" name="ddlIdentificacion" data-control="select2" data-hide-search="true" data-allow-clear="true" data-placeholder="Disabled">
                <option value=""></option>
                <option value="C" selected="selected">Cédula</option>
                <option value="R">RUC</option>
                <option value="P">Pasaporte</option>
            </select>
            <!--end::Input-->
        </div>
        <!--end::Input group-->
        <!--begin::Input group-->
        <div class="fv-row mb-10">
            <!--begin::Label-->
            <label class="form-label fs-6 fw-bolder text-dark">Identificación</label>
            <!--end::Label-->
            <!--begin::Input-->
            <input class="form-control form-control-lg form-control-solid" type="text" name="txtIdentificacion" />
            <!--end::Input-->
            <!--begin::Socio o Propietario-->
            <br />
            <label class="form-check form-check-custom form-check-solid form-check-inline">
             <input class="form-check-input" type="radio" name="chkTipo" value="S" checked />
             <span class="form-check-label fw-bold text-gray-700 fs-6">Socio</span>
             &nbsp;&nbsp;&nbsp;
             <input class="form-check-input" type="radio" name="chkTipo" value="P" />
             <span class="form-check-label fw-bold text-gray-700 fs-6">Propietario</span>
            </label>
            <!--end::Socio o Propietario-->
        </div>
        <!--end::Input group-->
        <!--begin::Actions-->
        <div class="text-center">
            <!--begin::Submit button-->
            <button type="submit" id="btnVerificar" class="btn btn-lg btn-primary w-100 mb-5">
                <span class="indicator-label">Verificar</span>
                <span class="indicator-progress">
                    Por favor espere...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
            <!--end::Submit button-->            
        </div>
        <!--end::Actions-->
    </form>
    <!--end::Form-->
</div>